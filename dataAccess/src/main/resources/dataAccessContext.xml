<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
		http://www.springframework.org/schema/beans/spring-beans-4.3.xsd">

    <import resource="spring/*Context.xml"/>

    <bean id="parameterDao" class="org.ivt.agregator.dao.ParameterDao"/>

    <bean id="vkGroupsDao" class="org.ivt.agregator.dao.VkGroupsDao" scope="prototype">
        <constructor-arg ref="vkAuthHelper"/>
        <constructor-arg ref="vkClient"/>
    </bean>

    <bean id="eventDao" class="org.ivt.agregator.dao.EventDao"/>

    <bean id="eventConverter" class="org.ivt.agregator.converters.EventConverter"/>

</beans>